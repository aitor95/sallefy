<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TitlesTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TrackTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SubTitlesTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="formLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="buttonText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="primaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!-- Social -> menu de arriba-->

    <style name="secondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="TextMenu" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="ActiveTextMenu" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Menu upper main -->
    <style name="BottomNavigationView" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!--Me page-->
    <style name="username_me_text">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MeNavigationView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@null</item>

    </style>

    <style name="MeNavigationView.Active">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPurpleButtons</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/round_corner_light</item>
    </style>

</resources>
